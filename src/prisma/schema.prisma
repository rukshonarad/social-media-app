datasource db {
    provider = "mongodb"
    url      = env("DB_URL")
}

generator client {
    provider = "prisma-client-js"
}

enum AccountStatus {
    INACTIVE
    ACTIVE
}

enum PostStatus {
    PUBLIC
    PRIVATE
}

enum PostType {
    TEXT
    IMAGE
    VIDEO
}

enum FrienshipStatus {
    FRIEND
    UNFRIEN
}

model User {
    id                               String        @id @default(auto()) @map("_id") @db.ObjectId
    email                            String        @unique
    firstName                        String
    lastName                         String
    dateOfBirth                      DateTime
    password                         String
    country                          String?
    education                        String?
    workExperience                   String?
    status                           AccountStatus @default(INACTIVE)
    activationToken                  String?
    passwordResetToken               String?
    passwordResetTokenExpirationDate DateTime?
    createdAt                        DateTime      @default(now())
    updatedAt                        DateTime      @updatedAt
}

model Post {
    id        String     @id @default(auto()) @map("_id") @db.ObjectId
    content   String
    status    PostStatus @default(PUBLIC)
    type      PostType   @default(TEXT)
    createdAt DateTime   @default(now())
    updatedAt DateTime   @updatedAt
    userId    String?    @db.ObjectId
}

model Like {
    id     String  @id @default(auto()) @map("_id") @db.ObjectId
    // count  Int     @default(autoincrement())
    userId String? @db.ObjectId
    postId String? @db.ObjectId
}

model Comment {
    id     String  @id @default(auto()) @map("_id") @db.ObjectId
    // count  Int     @default(autoincrement())
    userId String? @db.ObjectId
    postId String? @db.ObjectId
}

model Friend {
    id          String          @id @default(auto()) @map("_id") @db.ObjectId
    firstName   String
    lastName    String
    email       String          @unique
    password    String?
    userId      String          @db.ObjectId
    inviteToken String?
    status      FrienshipStatus @default(UNFRIEN)
}
